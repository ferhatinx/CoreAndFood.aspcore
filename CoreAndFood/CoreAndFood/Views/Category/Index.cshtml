 
@model List<CoreAndFood.Data.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Category ID</th>
            <th scope="col">Category Name</th>
            <th scope="col">Status</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <th scope="row">@x.CategoryID</th>
            <td>@x.CategoryName</td>
            <td>@x.Status</td>
            <td><a href="/Category/CategoryDelete/@x.CategoryID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/CategoryGet/@x.CategoryID" class="btn btn-warning">Update</a></td>
        </tr>
        }


    </tbody>
</table>
<a href="/Category/CategoryAdd" class="btn btn-primary">New Category </a>